<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title|default('Conwix UI') }}</title>
    <style>
        body { font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; margin: 0; }
        header { padding: 12px 16px; border-bottom: 1px solid #eee; display:flex; gap:12px; align-items:center; }
        main { padding: 16px; }
        a { color: inherit; }
        .muted { color:#666; }
        .card { border:1px solid #eee; border-radius: 10px; padding: 12px; margin-bottom: 10px; }
        .row { display:flex; gap: 12px; align-items:center; justify-content: space-between; }
        .btn { display:inline-block; padding: 8px 12px; border-radius: 8px; border:1px solid #ddd; text-decoration:none; }
        .btn-primary { background:#111; color:#fff; border-color:#111; }
        .msg { padding: 10px 12px; border-radius: 10px; max-width: 720px; margin: 8px 0; }
        .msg-in { background:#f4f4f4; }
        .msg-out { background:#111; color:#fff; margin-left:auto; }
        .stack { display:flex; flex-direction: column; }
        textarea { width: 100%; min-height: 90px; padding: 10px; border-radius: 10px; border:1px solid #ddd; }
    </style>
</head>
<body>
<header>
    <strong>Conwix UI</strong>
    <span class="muted">dev-only</span>
    {% if accountId is defined %}
        <span class="muted">X-Account-Id: {{ accountId }}</span>
    {% endif %}
    <span style="margin-left:auto;"></span>
    <a class="btn" href="/ui/companies">Companies</a>
</header>

<main>
    {% block content %}{% endblock %}
</main>
</body>
</html>
