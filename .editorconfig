# EditorConfig — Conwix
# Единые правила форматирования для IDE (PhpStorm) и CI
# Источник истины для отступов и базового стиля

root = true

# --------------------------------------------------
# Global defaults
# --------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# --------------------------------------------------
# PHP (Symfony)
# --------------------------------------------------
[*.php]
indent_size = 4
max_line_length = 120

# --------------------------------------------------
# Twig templates
# --------------------------------------------------
[*.twig]
indent_size = 2

# --------------------------------------------------
# YAML (docker-compose, config, infra)
# ВАЖНО: только пробелы, табы запрещены
# --------------------------------------------------
[*.yml]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 4

# --------------------------------------------------
# JSON
# --------------------------------------------------
[*.json]
indent_size = 2

# --------------------------------------------------
# JavaScript / TypeScript / React
# --------------------------------------------------
[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

# --------------------------------------------------
# CSS / SCSS
# --------------------------------------------------
[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# --------------------------------------------------
# Dockerfiles
# --------------------------------------------------
[Dockerfile*]
indent_size = 2

# --------------------------------------------------
# Shell scripts
# --------------------------------------------------
[*.sh]
indent_size = 2

# --------------------------------------------------
# Markdown
# --------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# --------------------------------------------------
# Makefile (ВАЖНО: только табы)
# --------------------------------------------------
[Makefile]
indent_style = tab
